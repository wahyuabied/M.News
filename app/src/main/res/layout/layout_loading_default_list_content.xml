<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/view_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/view_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/space4"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view_card_1"
            android:layout_width="60dp"
            android:layout_height="9dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_grey_rect_3x"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_card"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/space_card"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_grey_rect_3x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintStart_toEndOf="@id/view_card"
            app:layout_constraintTop_toBottomOf="@+id/view_card_1" />

        <View
            android:id="@+id/view_card_3"
            android:layout_width="70dp"
            android:layout_height="9dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_grey_rect_3x"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintStart_toEndOf="@id/view_card"
            app:layout_constraintTop_toBottomOf="@+id/space_card" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/view2_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/view2_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/space4"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view2_card_1"
            android:layout_width="60dp"
            android:layout_height="9dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_grey_rect_3x"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/view2_card"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/space2_card"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_grey_rect_3x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintStart_toEndOf="@id/view2_card"
            app:layout_constraintTop_toBottomOf="@+id/view2_card_1" />

        <View
            android:id="@+id/view2_card_3"
            android:layout_width="70dp"
            android:layout_height="9dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_grey_rect_3x"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintStart_toEndOf="@id/view2_card"
            app:layout_constraintTop_toBottomOf="@+id/space2_card" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>